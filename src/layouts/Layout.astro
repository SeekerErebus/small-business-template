---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "The Craft Table | Restaurant & Bar",
  description = "Fresh, locally-sourced cuisine in the heart of Salt Lake City. Reservations available."
} = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <link rel="canonical" href="https://example.com" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Playfair+Display:wght@400;600;700&display=swap" rel="stylesheet" />
    <title>{title}</title>
  </head>
  <body class="bg-stone-50 text-stone-800 font-sans antialiased">
    <nav class="fixed top-0 w-full z-50 bg-white/90 backdrop-blur-md border-b border-stone-200">
      <div class="max-w-6xl mx-auto px-6 py-4 flex justify-between items-center">
        <a href="#" class="font-serif text-xl font-bold text-stone-900">The Craft Table</a>
        <div class="hidden sm:flex gap-6 text-sm text-stone-600">
          <a href="#menu" class="hover:text-stone-900 transition-colors">Menu</a>
          <a href="#about" class="hover:text-stone-900 transition-colors">About</a>
          <a href="#contact" class="hover:text-stone-900 transition-colors">Contact</a>
        </div>
        <a href="#contact" class="hidden sm:inline-block bg-amber-600 hover:bg-amber-700 text-white text-sm font-medium px-4 py-2 rounded-lg transition-colors">
          Reserve a Table
        </a>
      </div>
    </nav>
    <slot />
  </body>
</html>
